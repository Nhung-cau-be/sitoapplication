<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo chiến dịch"
        tools:layout_editor_absoluteX="377dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên chiến dịch"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="147dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Nhập tên chiến dịch"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mục tiêu chiến dịch"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="242dp" />

    <EditText
        android:id="@+id/editTextTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hết hạn"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="347dp" />

    <EditText
        android:id="@+id/editTextDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="366dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="463dp" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Nhập địa chỉ"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="482dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Câu chuyện"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="585dp" />

    <EditText
        android:id="@+id/editTextStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="618dp" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo"
        tools:layout_editor_absoluteX="366dp"
        tools:layout_editor_absoluteY="753dp" />
</androidx.constraintlayout.widget.ConstraintLayout>