<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E37236" /> <!-- Màu khi nhấn -->
            <corners android:radius="8dp" /> <!-- Bán kính bo tròn, có thể điều chỉnh theo nhu cầu -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="#E65203" /> <!-- Màu mặc định -->
            <corners android:radius="8dp" /> <!-- Bán kính bo tròn, có thể điều chỉnh theo nhu cầu -->
        </shape>
    </item>
</selector>